@model PostJob;

<link href="~/css/JobDetai.css" rel="stylesheet" />


<div class="JobDcontainer">

    <div class="nav">
        <div class="navHade">
            <img src="https://i.pravatar.cc/150?img=@Model.postBy.institutionId" class="avater" />
            <p class="title">@Model.jobTitle</p>
        </div>

        <div class="icon-Group">
            <img src="~/img/Vector-3.svg" alt="Vector2941" class="icon" />
            <img src="~/img/Vector-2.svg" alt="Vector2941" class="icon" />
        </div>
    </div>


    <div class="main">

        <div class="text-bolck">
            <div class="title">
                company name
            </div>

            <div class="text">
                @Model.postBy.name
            </div>
        </div>

        <div class="text-bolck">
            <div class="title">
                Positon
            </div>

            <div class="text">
                @Model.jobDuties
            </div>
        </div>

        <div class="text-bolck">
            <div class="title">
                Location
            </div>

            <div class="text">
                @Model.location
            </div>
        </div>

        <div class="text-bolck">
            <div class="title">
                Salary
            </div>

            <div class="text">
                @Model.jobSalary BIRR
            </div>
        </div>

        <div class="text-bolck">
            <div class="title">
                Job Description
            </div>

            <div class="text">
                @Model.jobDescription
            </div>
        </div>

        <div class="text-bolck">
            <div class="title">
                Job Requirements
            </div>

            <li class="text list">
                @Model.jobRequirements
            </li>


        </div>

        <div class="text-bolck">
            <div class="title">
                employment Type
            </div>

            <div class="text">
                @Model.employmentType
            </div>
        </div>


        <div class="foot">
            @if (ViewBag.appledFlag == null && ViewBag.appledFlag == false)
            {
                <a href="@Url.Action("ApplyJob", "Job" , new { jobId=Model.jobId })" class="btnn">Apply Now</a>

            }
            else{
                <p class="btnn">
                    in Progress
                </p>
            }
        </div>

    </div>

</div>